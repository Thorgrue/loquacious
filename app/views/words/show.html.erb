<div class="container m-auto">
  <div class="bg-cover" style="background-image: url('<%= @word.url %>'); opacity: 0.30; height: 75vh;">
    <div class="flex flex-wrap content-center h-full">

      <!-- Flèche gauche -->
      <div class="z-50 -mx-10 flex flex-wrap content-center h-full">
        <% unless @word == @words.first %>
          <div class="text-5xl text-center flex">
            <span><%= link_to "◀︎", word_path(@previous_word) %></span>
          </div>
        <% end %>
      </div>

      <div class="z-0 mx-auto flex flex-wrap content-center h-full w-4/6">

        <!-- Word -->
        <div class="w-full flex flex-wrap inline-block align-text-bottom"><h1 class="font-title-play text-3xl"><%= @word.name %>,</h1>
          <h3 class="font-title-play text-xl"><%= @word.cat %> :</h3>
        </div>

        <!-- Définition -->
        <div class="px-10 font-body-philo text-xl text-justify">
          <p class="py-3"><%= @word.origin %></p>
          <p class="py-3"><%= @word.definition %></p>
        </div>

      </div>

      <!-- Flèche droite -->
      <div class="z-50 -mx-10 flex flex-wrap content-center h-full">
        <% unless @word == @words.last %>
          <div class="text-5xl">
            <div><%= link_to "▶︎", word_path(@next_word) %></div>
          </div>
        <% end %>
      </div>

     </div>
  </div>

  <h1 class="text-4xl font-title-play text-center -mt-10 pt-1"><%= @word.day.strftime("%d %B") %></h1>

</div>

